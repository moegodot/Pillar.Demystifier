<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Pillar.Demystifier</Product>
    <Title>Pillar.Demystifier</Title>
    <Description>The best way to output any exceptions.</Description>
    <Authors>Ben Adams,Moe Godot</Authors>
    <PackageId>MoeDotKawayi.Pillar.Demystifier</PackageId>
    <PackageProjectUrl>https://github.com/moegodot/Pillar.Demystifier</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>

    <Nullable>enable</Nullable>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>

      <RepositoryType>git</RepositoryType>
      <IncludeSource>true</IncludeSource>
      <DebugType>embedded</DebugType>
      <RepositoryUrl>https://github.com/moegodot/Pillar.Demystifier</RepositoryUrl>
      <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/>
    </ItemGroup>

  <PropertyGroup>
    <TargetFrameworks>net9.0;netstandard2.0</TargetFrameworks>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.4.244" PrivateAssets="all" />
    <PackageReference Include="SourceLink.Create.CommandLine" Version="2.8.3" PrivateAssets="all" />
    <PackageReference Include="System.Reflection.Metadata">
      <Version>9.0.10</Version>
    </PackageReference>
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.6.3" Condition="'$(TargetFramework)' != 'netstandard2.1'" />
    <PackageReference Include="ZString" Version="2.5.1" />
  </ItemGroup>

  <ItemGroup Label="TestInternalsVisibleTo">
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
        <_Parameter1>$(AssemblyName).Test, </_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\images\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
      <None Include="..\..\readme.md">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
      </None>
  </ItemGroup>
</Project>
